set nu
set ai
set cursorline
set background=dark
set tabstop=4
set shiftwidth=4
set ruler
set backspace=2
set formatoptions+=r
set history=100
set incsearch

inoremap ( ()<Esc>i
inoremap [ []<Esc>i
inoremap { {}<Esc>i
inoremap " ""<Esc>i
inoremap ' ''<Esc>i
set expandtab
syntax on
""hi Normal ctermfg=234 guifg=#1c1c1c
""hi Normal ctermfg=grey ctermbg=darkblue
filetype indent on
hi LineNr cterm=bold ctermfg=DarkGray ctermbg=NONE
hi CursorLineNr cterm=bold ctermfg=Green ctermbg=NONE

set t_CO=256
