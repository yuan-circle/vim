set nu
set ai
set cursorline
set background=dark
set tabstop=4
set shiftwidth=4
set ruler
set backspace=2
set formatoptions+=r
set history=100
set incsearch

inoremap ( ()<Esc>i
inoremap [ []<Esc>i
inoremap { {}<Esc>i
inoremap " ""<Esc>i
inoremap ' ''<Esc>i
set expandtab
syntax on
""syntax enable
""hi Normal ctermfg=234 guifg=#1c1c1c
""hi Normal ctermfg=grey ctermbg=darkblue
filetype indent on
hi LineNr cterm=bold ctermfg=DarkGray ctermbg=NONE
hi CursorLineNr cterm=bold ctermfg=Green ctermbg=NONE
set softtabstop=4
" use <t_CO> colors in terminal
if !has("gui_running")
    set t_Co=256
    set term=screen-256color
endif

" fix cursor display in cygwin
if has("win32unix")
    let &t_ti.="\e[1 q"
    let &t_SI.="\e[5 q"
    let &t_EI.="\e[1 q"
    let &t_te.="\e[0 q"
endif
